<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/background_color"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/save_landmark_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/acme"
            android:text="Save This Landmark As A Favourite"
            android:textColor="@color/coral"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"/>

           <EditText
               android:id="@+id/save_name_input"
               android:layout_below="@id/save_landmark_txt"
               android:layout_width="match_parent"
               android:hint="Enter Landmark Name"
               android:layout_marginTop="15dp"
               android:fontFamily="@font/acme"
               android:textSize="13sp"
               android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/save_desc_input"
            android:layout_below="@id/save_name_input"
            android:layout_width="match_parent"
            android:hint="Enter Landmark Description"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/acme"
            android:textSize="13sp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</LinearLayout>