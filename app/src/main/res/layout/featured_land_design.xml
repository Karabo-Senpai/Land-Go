<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <!--Hook To Add All Card View Elements-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/featured_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/bigbird"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/featured_landmark_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/big_bird_text"
            android:textSize="16sp"
            android:fontFamily="@font/acme"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"/>

        <RatingBar
            android:id="@+id/featured_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="2.3"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <TextView
            android:id="@+id/featured_landmark_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/big_bird_desc"
            android:textSize="12sp"
            android:fontFamily="@font/acme"
            android:textColor="@color/teal_700"
            android:layout_marginTop="5dp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>